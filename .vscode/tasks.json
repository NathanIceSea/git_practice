{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Make C Project",
            "command": "make",
            "windows": {
                "args": [
                    "lang=c",
                    "path='${fileDirname}'",
                    "os=windows"
                ],
            },
            "linux": {
                "args": [
                    "lang=c",
                    "path='${fileDirname}'",
                    "os=linux"
                ]
            },
            "type": "shell",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Make C++ Project",
            "command": "make",
            "windows": {
                "args": [
                    "lang=c++",
                    "path='${fileDirname}'",
                    "os=windows"
                ],
            },
            "linux": {
                "args": [
                    "lang=c++",
                    "path='${fileDirname}'",
                    "os=linux"
                ]
            },
            "type": "shell",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "make clean",
            "command": "make clean",
            "type": "shell",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "clean",
            "command": "cd '${workspaceFolder}' && find ./build -type f -not -name '.git*' -exec rm -i {} \\; && find . -type f -name '*.exe' -exec rm -i {} \\; && find . -type f -name 'main' -exec rm -i {} \\; && find . -type f -name '*.o' -exec rm -i {} \\; && find . -type f -name 'tempCodeRunnerFile.*' -exec rm -i {} \\;",
            "type": "shell",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "unsafe clean",
            "command": "cd '${workspaceFolder}' && find ./build -type f -not -name '.git*' -delete && find . -type f -name '*.exe' -delete && find . -type f -name 'main' -delete && find . -type f -name '*.o' -delete && find . -type f -name 'tempCodeRunnerFile.*' -delete",
            "type": "shell",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        }
    ]
}